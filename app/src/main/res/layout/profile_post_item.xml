<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/profile_image_video_item"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_play_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="@id/profile_image_video_item"
        app:layout_constraintEnd_toEndOf="@id/profile_image_video_item"
        app:layout_constraintStart_toStartOf="@id/profile_image_video_item"
        app:layout_constraintTop_toTopOf="@id/profile_image_video_item" />

</androidx.constraintlayout.widget.ConstraintLayout>